<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Emergency Service -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/emergencyServiceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Service"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emergencyServiceDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Emergency services are available 24/7 for critical care and accident cases." />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#E0E0E0" />
    </LinearLayout>

    <!-- ICU Service -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/icuServiceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ICU Service"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/icuServiceDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Intensive Care Unit for patients needing critical and specialized medical care." />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#E0E0E0" />
    </LinearLayout>

    <!-- General Surgery -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/generalSurgeryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Surgery"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/generalSurgeryDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="We provide surgeries ranging from appendectomy to hernia repairs and more." />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#E0E0E0" />
    </LinearLayout>

    <!-- Maternity Service -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/maternityServiceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maternity Service"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/maternityServiceDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Comprehensive care for expectant mothers and newborns." />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#E0E0E0" />
    </LinearLayout>

    <!-- Book Service Button -->
    <Button
        android:id="@+id/bookServiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Book Service" />
</LinearLayout>