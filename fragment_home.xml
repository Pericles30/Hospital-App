<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_blue"
    android:padding="32dp"
    android:gravity="center"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/hospitalLogo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="hospital_logo_desc"
        android:src="@drawable/img"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Welcome to CareCure Hospital"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textSize="30sp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Where Compassion Meets Care"
        android:textAlignment="center"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:layout_marginBottom="36dp" />

    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_500"
        android:text="View Hospital Information"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        android:onClick="openHospitalInfo" />
</LinearLayout>
